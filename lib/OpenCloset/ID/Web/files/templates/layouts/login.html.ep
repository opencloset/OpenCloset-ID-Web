<!DOCTYPE html>
<!--[if IE 8]> <html lang="ko" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="ko" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="ko"> <!--<![endif]-->
<!-- BEGIN HEAD -->
  <head>
    <title><%= title . ' - ' . $site->{name} %></title>

    <!-- META BEGINS -->
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link rel="icon" type="image/png" href="<%= url_for("/img/icon.png") %>" />
    <!-- META ENDS -->

    <!-- CSS BEGINS -->
    %= asset "app.css"
    %= asset "login-common.css";
    % if ( asset->processed("$page_id.css") ) {
      %= asset "$page_id.css";
    % }
    <!-- CSS ENDS -->

    <!-- JAVASCRIPT BEGINS -->
    <script>
    console && console.log("%c Welcome! Looking for support tell our team at staff@silex.kr","font-size:1.5em;color:#4b8df8;");
    var CONFIG = {
    };
    </script>
    <!-- JAVASCRIPT ENDS -->
  </head>

  <body class="login login-background">

    <!-- CONTAINER BEGINS -->
    <div class="container">
      %= content
    </div>
    <!-- CONTAINER ENDS -->

    <div id="success-notification" class="notification notification-positive">
      <button class="iconbtn mdi mdi-close closebtn"></button>
      <h2 class="notification-title"></h2>
      <p class="notification-body"></p>
    </div>  <div id="error-notification" class="notification notification-negative">
      <button class="iconbtn mdi mdi-close closebtn"></button>
      <h2 class="notification-title"></h2>
      <p class="notification-body"></p>
    </div>

    <!-- JAVASCRIPT BEGINS -->
    %= asset "app.js"
    %= asset "login-common.js";
    % if ( asset->processed("$page_id.js") ) {
      %= asset "$page_id.js";
    % }

    <!-- remove alert box after 8 sec -->
    <script type="text/javascript">
      setTimeout( function() { $(".alert").remove() }, 8000 );
    </script>
    <!-- JAVASCRIPT ENDS -->

  </body>
</html>
